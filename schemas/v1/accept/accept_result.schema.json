{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wrkr.dev/schemas/v1/accept/accept_result.schema.json",
  "title": "Wrkr Acceptance Result",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "job_id",
    "checks_run",
    "checks_passed",
    "failures",
    "reason_codes"
  ],
  "properties": {
    "schema_id": { "const": "wrkr.accept_result" },
    "schema_version": { "type": "string", "pattern": "^v1(\\.[0-9]+)?$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string", "minLength": 1 },
    "job_id": { "type": "string", "minLength": 1 },
    "checks_run": { "type": "integer", "minimum": 0 },
    "checks_passed": { "type": "integer", "minimum": 0 },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["check", "message"],
        "properties": {
          "check": { "type": "string", "minLength": 1 },
          "message": { "type": "string", "minLength": 1 },
          "artifact": { "type": "string" }
        }
      }
    },
    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
