{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wrkr.dev/schemas/v1/jobpack/manifest.schema.json",
  "title": "Wrkr Jobpack Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "job_id",
    "manifest_sha256",
    "files"
  ],
  "properties": {
    "schema_id": { "const": "wrkr.jobpack_manifest" },
    "schema_version": { "type": "string", "pattern": "^v1(\\.[0-9]+)?$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string", "minLength": 1 },
    "job_id": { "type": "string", "minLength": 1 },
    "manifest_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    }
  }
}
