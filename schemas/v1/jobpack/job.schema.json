{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wrkr.dev/schemas/v1/jobpack/job.schema.json",
  "title": "Wrkr Job Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "job_id",
    "name",
    "status",
    "budgets"
  ],
  "properties": {
    "schema_id": { "const": "wrkr.job" },
    "schema_version": { "type": "string", "pattern": "^v1(\\.[0-9]+)?$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string", "minLength": 1 },
    "job_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "minLength": 1 },
    "budgets": { "type": "object", "additionalProperties": true }
  }
}
