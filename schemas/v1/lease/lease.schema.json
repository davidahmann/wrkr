{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wrkr.dev/schemas/v1/lease/lease.schema.json",
  "title": "Wrkr Lease Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "worker_id",
    "lease_id",
    "acquired_at",
    "heartbeat_at",
    "expires_at"
  ],
  "properties": {
    "schema_id": { "const": "wrkr.lease" },
    "schema_version": { "type": "string", "pattern": "^v1(\\.[0-9]+)?$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string", "minLength": 1 },
    "worker_id": { "type": "string", "minLength": 1 },
    "lease_id": { "type": "string", "minLength": 1 },
    "acquired_at": { "type": "string", "format": "date-time" },
    "heartbeat_at": { "type": "string", "format": "date-time" },
    "expires_at": { "type": "string", "format": "date-time" }
  }
}
